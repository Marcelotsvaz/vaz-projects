{
	"terminal.integrated.automationProfile.linux": {
		"path": "/usr/bin/bash",
		"args": [ "-c", "source '${workspaceFolder}/deploy/deploy.sh' null local; eval $1" ],
	},
	
	"terminal.integrated.profiles.linux": {
		"bash": {
			"path": "/usr/bin/bash",
			"args": [ "-c", "source '${workspaceFolder}/deploy/deploy.sh' null local; exec bash" ],
		},
		"fish": {
			"path": "/usr/bin/fish",
			"args": [ "-c", "sourceBash '${workspaceFolder}/deploy/deploy.sh' null local; exec fish" ],
		},
	},
	
	"runOnSave.commands": [
		{
			// Match less files.
			"match": "\\.less$",
			"command": "${workspaceFolder}/application/scripts/less.sh",
			"runIn": "backend",
			"finishStatusMessage": "LESS compiled",
		},
	],
}