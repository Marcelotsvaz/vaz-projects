{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Deploy",
			"type": "shell",
			"command": "server/scripts/deploy.sh",
			"args": [
				"${input:task}",
				"${input:environment}",
				"local",
			],
			"problemMatcher": [],
		},
	],
	"inputs": [
		{
			"id": "environment",
			"type": "pickString",
			"description": "Select the target environment",
			"default": "staging",
			"options": [
				{
					"label": "Staging",
					"value": "staging"
				},
				{
					"label": "Production",
					"value": "production"
				},
			]
		},
		{
			"id": "task",
			"type": "pickString",
			"description": "Select the operation",
			"default": "deployEnvironment",
			"options": [
				{
					"label": "Deploy AWS",
					"value": "deployAws"
				},
				{
					"label": "Destroy AWS",
					"value": "destroyAws"
				},
				{
					"label": "Upload Files",
					"value": "uploadFiles"
				},
				{
					"label": "Deploy Environment",
					"value": "deployEnvironment"
				},
				{
					"label": "Destroy Environment",
					"value": "destroyEnvironment"
				},
			],
		},
	]
}