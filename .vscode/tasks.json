{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Deploy",
			"type": "shell",
			"command": "server/scripts/deploy.sh",
			"args": [
				"${input:task}",
				"global",
				"local",
			],
			"problemMatcher": [],
		},
	],
	"inputs": [
		{
			"id": "task",
			"type": "pickString",
			"description": "Select the operation",
			"default": "deployAws",
			"options": [
				{
					"label": "Deploy AWS",
					"value": "deployAws"
				},
				{
					"label": "Destroy AWS",
					"value": "destroyAws"
				},
			],
		},
	]
}