[Unit]
Description = Dehydrated
StartLimitIntervalSec = 6h
StartLimitBurst = 5

[Service]
Type = oneshot
User = nginx
Group = nginx

Restart = on-failure
RestartSec = 1h

EnvironmentFile = /etc/environment
ExecStart = /home/nginx/loadBalancer/config/tls/dehydrated.sh
ExecStartPost = +systemctl reload nginx